{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"skipLibCheck": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ES2020",
			"DOM"
		],
	},
	"include": ["src"]
}
